<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:id="@+id/et_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Length"
            android:ems="10"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

    <ViewAnimator
            android:id="@+id/iv_text_valid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inAnimation="@android:anim/fade_in"
            android:animateFirstView="true"
            app:layout_constraintTop_toTopOf="@+id/et_length"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="@+id/et_length" app:layout_constraintStart_toEndOf="@+id/et_length"
            android:layout_marginStart="16dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_delete"
                app:layout_constraintTop_toTopOf="@+id/et_length"
                android:alpha="1"
                app:layout_constraintBottom_toBottomOf="@+id/et_length" app:layout_constraintStart_toEndOf="@+id/et_length"
                android:layout_marginStart="16dp"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_input_add"
                app:layout_constraintTop_toTopOf="@+id/et_length"
                android:alpha="1"
                app:layout_constraintBottom_toBottomOf="@+id/et_length" app:layout_constraintStart_toEndOf="@+id/et_length"
                android:layout_marginStart="16dp"/>

    </ViewAnimator>

    <EditText
            android:id="@+id/et_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:ems="10"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/et_length"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/presence_invisible"
            android:id="@+id/iv_internet_indicator"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/et_email" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/et_email"
    />
    <TextView
            android:text="network status:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/et_email"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>